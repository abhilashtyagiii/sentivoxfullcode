# ===========================================
# SENTIVOX - Environment Variables Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (REQUIRED)
# ===========================================
# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sentivox?retryWrites=true&w=majority

# ===========================================
# AUTHENTICATION (REQUIRED)
# ===========================================
# JWT Secret - Generate a random string (min 32 chars)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-this-random

# Session Secret
SESSION_SECRET=your-session-secret-key-change-in-production

# Encryption Key for sensitive data (64 hex characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key

# ===========================================
# AI SERVICES (REQUIRED for analysis)
# ===========================================
# OpenAI API Key - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini API Key - https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_API_KEY=your-google-api-key

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=your-email@domain.com

# ===========================================
# CORS & DEPLOYMENT
# ===========================================
# Frontend URL (set to your Vercel deployment URL in production)
FRONTEND_URL=http://localhost:5173

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES (Vite)
# ===========================================
# These go in your Vercel frontend deployment
# VITE_API_URL=https://your-backend-url.onrender.com
